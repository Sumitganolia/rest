<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Posts</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <h1>Quora</h1>
      <% for (const post of posts) { %>
      <div class="post">
        <h2 class="user">@<%= post.username %></h2>
        <p class="content"><%= post.content %></p>
  
      <br />
      <a href="http://localhost:8080/posts/<%= post.id %>" class="see">See Your Post</a>
      <a href="http://localhost:8080/posts/<%= post.id %>/edit" class="see" >Edit Your Post</a>
      <br><br>
      <form method="post" action="http://localhost:8080/posts/<%= post.id %>?_method=DELETE">
        <button>Delete</button>
      </form>
          </div>
      <% } %>

    <br />
    <a href="http://localhost:8080/posts/new" class="create">Create New Post</a>
  </body>
</html>
